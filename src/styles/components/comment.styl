.addComment
  form
    margin-top 20px;
    fieldset
      display: grid
      border 2px solid black
      grid-template-columns 1fr 2fr
      grid-template-areas: "label area" "label area" "label area" ". button"
      grid-row-gap: 10px;
      button
        width: 170px
        color: #fff
        background: #085394
        border: none
        padding: 5px
        grid-area: button
      textarea
        resize: none
        width: 600px
        border 2px solid black
      input
        padding-left: 5px
        width 200px
        border 2px solid black
      label
        margin:  5px
        float: left


